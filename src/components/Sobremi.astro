<script>
    document.querySelectorAll('.acord').forEach(acordion => {
        acordion.addEventListener('click', () => {
            // Cerrar todos los demás acordeones
            document.querySelectorAll('.acord .info').forEach(info => {
                if (info !== acordion.querySelector('.info')) {
                    info.classList.add('hidden');
                }
            });
            
            // Alternar el acordeón clickeado
            const info = acordion.querySelector('.info');
            info.classList.toggle('hidden');
            
            // Opcional: Añadir animación suave
            info.style.transition = 'all 0.3s ease';
        });
    });
</script>